<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.gerweck.scala</groupId>
  <artifactId>gerweck-utils</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <name>Scala Utils</name>
  <description>Various utility methods with Scala APIs</description>
  <properties>
    <scala.version>2.10.1</scala.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-library</artifactId>
      <version>${scala.version}</version>
    </dependency>
    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-reflect</artifactId>
      <version>${scala.version}</version>
      <!-- This is needed only at compile time -->
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.log4s</groupId>
      <artifactId>log4s</artifactId>
      <version>[0.1.0-SNAPSHOT,)</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.scala-tools</groupId>
        <artifactId>maven-scala-plugin</artifactId>
        <version>2.15.2</version>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
            <configuration>
              <useTestClasspath>true</useTestClasspath>
              <args>
                <arg>-deprecation</arg>
                <arg>-feature</arg>
                <!-- XXX: This desperately needs to be re-enabled -->
                <!--arg>-optimise</arg-->
                <arg>-target:jvm-1.7</arg>
                <arg>-Ystruct-dispatch:poly-cache</arg>
                <arg>-Yclosure-elim</arg>
                <arg>-Yinline</arg>
              </args>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
